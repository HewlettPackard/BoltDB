<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.5.0</Version>
    <NoWarn>1573;1591</NoWarn>
    <DebugType>embedded</DebugType>
    <EmbedAllSources>true</EmbedAllSources>
    <Authors>Hewlett Packard Enterprise Development LP</Authors>
    <Copyright>Hewlett Packard Enterprise Development LP</Copyright>
    <PackageDescription>BoltDB is an open-source C# Bolt database implementation</PackageDescription>
    <PackageLicenseExpression>LGPL-2.1-only</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/HewlettPackard/BoltDB</PackageProjectUrl>
    <RepositoryUrl>https://github.com/HewlettPackard/BoltDB</RepositoryUrl>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HashDepot" Version="2.0.3" />
  </ItemGroup>

</Project>
